{
  "categories": {
    "filesystem": {
      "name": {
        "ru": "Файловая система",
        "en": "File System"
      },
      "description": {
        "ru": "Навигация и управление файлами и директориями",
        "en": "Navigation and file/directory management"
      },
      "commands": {
        "ls": {
          "name": "ls",
          "description": {
            "ru": "Показывает список файлов и папок в текущей директории",
            "en": "Lists files and directories in current directory"
          },
          "params": [
            {
              "ru": "-l : подробный список с правами и размерами",
              "en": "-l : detailed list with permissions and sizes"
            },
            {
              "ru": "-a : показать скрытые файлы (начинающиеся с точки)",
              "en": "-a : show hidden files (starting with dot)"
            },
            {
              "ru": "-h : человекочитаемые размеры (KB, MB, GB)",
              "en": "-h : human-readable sizes (KB, MB, GB)"
            }
          ],
          "examples": ["ls", "ls -la", "ls -lh /var/log"],
          "use_case": {
            "ru": "Посмотреть что находится в папке перед работой с файлами",
            "en": "Check what's in a directory before working with files"
          }
        },
        "cd": {
          "name": "cd",
          "description": {
            "ru": "Переход в другую директорию (change directory)",
            "en": "Change directory"
          },
          "params": [
            {
              "ru": "cd /путь : перейти в указанную директорию",
              "en": "cd /path : go to specified directory"
            },
            {
              "ru": "cd .. : подняться на уровень выше",
              "en": "cd .. : go up one level"
            },
            {
              "ru": "cd ~ : перейти в домашнюю директорию",
              "en": "cd ~ : go to home directory"
            },
            {
              "ru": "cd - : вернуться в предыдущую директорию",
              "en": "cd - : return to previous directory"
            }
          ],
          "examples": ["cd /var/log", "cd ..", "cd ~"],
          "use_case": {
            "ru": "Перемещение по файловой системе для доступа к нужным файлам",
            "en": "Navigate through filesystem to access needed files"
          }
        },
        "pwd": {
          "name": "pwd",
          "description": {
            "ru": "Показывает текущую директорию (print working directory)",
            "en": "Print working directory - shows current location"
          },
          "params": [],
          "examples": ["pwd"],
          "use_case": {
            "ru": "Узнать где вы находитесь в файловой системе",
            "en": "Find out where you are in the filesystem"
          }
        },
        "mkdir": {
          "name": "mkdir",
          "description": {
            "ru": "Создаёт новую директорию (make directory)",
            "en": "Make directory - creates new directory"
          },
          "params": [
            {
              "ru": "-p : создать вложенные директории",
              "en": "-p : create nested directories"
            }
          ],
          "examples": ["mkdir backup", "mkdir -p /opt/app/logs"],
          "use_case": {
            "ru": "Создание папок для организации файлов",
            "en": "Create folders for file organization"
          }
        },
        "rm": {
          "name": "rm",
          "description": {
            "ru": "Удаляет файлы или директории (remove)",
            "en": "Remove - deletes files or directories"
          },
          "params": [
            {
              "ru": "-r : рекурсивно удалить директорию с содержимым",
              "en": "-r : recursively remove directory with contents"
            },
            {
              "ru": "-f : принудительно, без подтверждения",
              "en": "-f : force, without confirmation"
            },
            {
              "ru": "-i : спрашивать подтверждение перед удалением",
              "en": "-i : ask for confirmation before deletion"
            }
          ],
          "examples": ["rm file.txt", "rm -rf /tmp/old_logs"],
          "use_case": {
            "ru": "Очистка ненужных файлов, освобождение места на диске",
            "en": "Clean up unnecessary files, free disk space"
          }
        },
        "cp": {
          "name": "cp",
          "description": {
            "ru": "Копирует файлы или директории (copy)",
            "en": "Copy files or directories"
          },
          "params": [
            {
              "ru": "-r : рекурсивно копировать директорию",
              "en": "-r : recursively copy directory"
            },
            {
              "ru": "-v : показывать процесс копирования",
              "en": "-v : verbose, show copy process"
            },
            {
              "ru": "-p : сохранить права и атрибуты",
              "en": "-p : preserve permissions and attributes"
            }
          ],
          "examples": ["cp file.txt backup.txt", "cp -r /var/www /backup/"],
          "use_case": {
            "ru": "Создание резервных копий перед изменениями",
            "en": "Create backups before making changes"
          }
        },
        "mv": {
          "name": "mv",
          "description": {
            "ru": "Перемещает или переименовывает файлы (move)",
            "en": "Move or rename files"
          },
          "params": [
            {
              "ru": "-v : показывать процесс перемещения",
              "en": "-v : verbose, show move process"
            },
            {
              "ru": "-i : спрашивать подтверждение при перезаписи",
              "en": "-i : ask for confirmation on overwrite"
            }
          ],
          "examples": ["mv old.txt new.txt", "mv /tmp/file.txt /opt/"],
          "use_case": {
            "ru": "Переименование файлов или перемещение в другую папку",
            "en": "Rename files or move to another folder"
          }
        },
        "touch": {
          "name": "touch",
          "description": {
            "ru": "Создаёт пустой файл или обновляет время изменения",
            "en": "Create empty file or update modification time"
          },
          "params": [],
          "examples": ["touch newfile.txt", "touch /var/log/app.log"],
          "use_case": {
            "ru": "Быстрое создание пустых файлов для тестирования",
            "en": "Quick creation of empty files for testing"
          }
        },
        "find": {
          "name": "find",
          "description": {
            "ru": "Поиск файлов по различным критериям",
            "en": "Search for files by various criteria"
          },
          "params": [
            {
              "ru": "-name : поиск по имени",
              "en": "-name : search by name"
            },
            {
              "ru": "-type f : только файлы",
              "en": "-type f : files only"
            },
            {
              "ru": "-type d : только директории",
              "en": "-type d : directories only"
            },
            {
              "ru": "-size +100M : файлы больше 100MB",
              "en": "-size +100M : files larger than 100MB"
            }
          ],
          "examples": ["find . -name '*.log'", "find /var -size +100M"],
          "use_case": {
            "ru": "Найти большие файлы, старые логи, конкретные конфиги",
            "en": "Find large files, old logs, specific configs"
          }
        },
        "ln": {
          "name": "ln",
          "description": {
            "ru": "Создаёт ссылки на файлы (link)",
            "en": "Create file links (symbolic or hard)"
          },
          "params": [
            {
              "ru": "-s : создать символическую ссылку",
              "en": "-s : create symbolic link"
            }
          ],
          "examples": ["ln -s /opt/app/current /opt/app/v1.2"],
          "use_case": {
            "ru": "Создание ярлыков для удобного доступа к файлам",
            "en": "Create shortcuts for convenient file access"
          }
        }
      }
    },
    "file_viewing": {
      "name": {
        "ru": "Просмотр содержимого",
        "en": "Content Viewing"
      },
      "description": {
        "ru": "Чтение и анализ текстовых файлов",
        "en": "Reading and analyzing text files"
      },
      "commands": {
        "cat": {
          "name": "cat",
          "description": {
            "ru": "Выводит всё содержимое файла целиком",
            "en": "Concatenate - outputs entire file content"
          },
          "params": [
            {
              "ru": "-n : показать номера строк",
              "en": "-n : show line numbers"
            }
          ],
          "examples": ["cat /etc/passwd", "cat -n app.log"],
          "use_case": {
            "ru": "Быстро посмотреть небольшой файл или конфиг",
            "en": "Quickly view a small file or config"
          }
        },
        "less": {
          "name": "less",
          "description": {
            "ru": "Просмотр файла с навигацией (пролистывание)",
            "en": "View file with navigation (scrolling)"
          },
          "params": [
            {
              "ru": "Space : следующая страница",
              "en": "Space : next page"
            },
            {
              "ru": "b : предыдущая страница",
              "en": "b : previous page"
            },
            {
              "ru": "q : выход",
              "en": "q : quit"
            }
          ],
          "examples": ["less /var/log/syslog"],
          "use_case": {
            "ru": "Просмотр больших логов с возможностью пролистывания",
            "en": "View large logs with scrolling capability"
          }
        },
        "head": {
          "name": "head",
          "description": {
            "ru": "Показывает первые строки файла (по умолчанию 10)",
            "en": "Shows first lines of file (default 10)"
          },
          "params": [
            {
              "ru": "-n 20 : показать первые 20 строк",
              "en": "-n 20 : show first 20 lines"
            }
          ],
          "examples": ["head /var/log/app.log", "head -n 50 error.log"],
          "use_case": {
            "ru": "Посмотреть начало файла или лога",
            "en": "View beginning of file or log"
          }
        },
        "tail": {
          "name": "tail",
          "description": {
            "ru": "Показывает последние строки файла (по умолчанию 10)",
            "en": "Shows last lines of file (default 10)"
          },
          "params": [
            {
              "ru": "-n 20 : показать последние 20 строк",
              "en": "-n 20 : show last 20 lines"
            },
            {
              "ru": "-f : следить за файлом в реальном времени",
              "en": "-f : follow file in real-time"
            }
          ],
          "examples": ["tail /var/log/app.log", "tail -f /var/log/nginx/error.log"],
          "use_case": {
            "ru": "Мониторинг логов в реальном времени, поиск последних ошибок",
            "en": "Real-time log monitoring, finding recent errors"
          }
        },
        "grep": {
          "name": "grep",
          "description": {
            "ru": "Поиск строк в файлах по шаблону",
            "en": "Search for lines in files by pattern"
          },
          "params": [
            {
              "ru": "-i : игнорировать регистр",
              "en": "-i : ignore case"
            },
            {
              "ru": "-r : рекурсивный поиск в директориях",
              "en": "-r : recursive search in directories"
            },
            {
              "ru": "-n : показать номера строк",
              "en": "-n : show line numbers"
            },
            {
              "ru": "-v : инвертировать (показать строки БЕЗ шаблона)",
              "en": "-v : invert (show lines WITHOUT pattern)"
            }
          ],
          "examples": ["grep 'error' app.log", "grep -i 'ERROR' *.log", "tail -f app.log | grep ERROR"],
          "use_case": {
            "ru": "Поиск ошибок в логах, фильтрация нужной информации",
            "en": "Search for errors in logs, filter needed information"
          }
        }
      }
    },
    "monitoring": {
      "name": {
        "ru": "Мониторинг системы",
        "en": "System Monitoring"
      },
      "description": {
        "ru": "Контроль ресурсов сервера: CPU, память, диск",
        "en": "Server resource monitoring: CPU, memory, disk"
      },
      "commands": {
        "top": {
          "name": "top",
          "description": {
            "ru": "Показывает процессы в реальном времени с использованием CPU",
            "en": "Shows processes in real-time with CPU usage"
          },
          "params": [
            {
              "ru": "q : выход",
              "en": "q : quit"
            },
            {
              "ru": "k : убить процесс",
              "en": "k : kill process"
            },
            {
              "ru": "M : сортировка по памяти",
              "en": "M : sort by memory"
            },
            {
              "ru": "P : сортировка по CPU",
              "en": "P : sort by CPU"
            }
          ],
          "examples": ["top"],
          "use_case": {
            "ru": "Найти процесс который нагружает CPU или память",
            "en": "Find process that's loading CPU or memory"
          }
        },
        "ps": {
          "name": "ps",
          "description": {
            "ru": "Показывает список запущенных процессов",
            "en": "Process status - shows list of running processes"
          },
          "params": [
            {
              "ru": "aux : все процессы всех пользователей",
              "en": "aux : all processes of all users"
            },
            {
              "ru": "-ef : полный формат",
              "en": "-ef : full format"
            }
          ],
          "examples": ["ps aux", "ps aux | grep nginx"],
          "use_case": {
            "ru": "Найти PID процесса для его остановки или анализа",
            "en": "Find process PID for stopping or analysis"
          }
        },
        "free": {
          "name": "free",
          "description": {
            "ru": "Показывает использование оперативной памяти",
            "en": "Shows RAM memory usage"
          },
          "params": [
            {
              "ru": "-m : в мегабайтах",
              "en": "-m : in megabytes"
            },
            {
              "ru": "-g : в гигабайтах",
              "en": "-g : in gigabytes"
            },
            {
              "ru": "-h : человекочитаемый формат",
              "en": "-h : human-readable format"
            }
          ],
          "examples": ["free -m", "free -h"],
          "use_case": {
            "ru": "Проверить сколько памяти свободно, есть ли утечки",
            "en": "Check how much memory is free, detect memory leaks"
          }
        },
        "df": {
          "name": "df",
          "description": {
            "ru": "Показывает использование дискового пространства",
            "en": "Disk free - shows disk space usage"
          },
          "params": [
            {
              "ru": "-h : человекочитаемый формат (GB, MB)",
              "en": "-h : human-readable format (GB, MB)"
            },
            {
              "ru": "-T : показать тип файловой системы",
              "en": "-T : show filesystem type"
            }
          ],
          "examples": ["df -h", "df -hT"],
          "use_case": {
            "ru": "Проверить заполнен ли диск, найти переполненный раздел",
            "en": "Check if disk is full, find overflowing partition"
          }
        },
        "du": {
          "name": "du",
          "description": {
            "ru": "Показывает размер директорий и файлов (disk usage)",
            "en": "Disk usage - shows directory and file sizes"
          },
          "params": [
            {
              "ru": "-sh : суммарный размер директории",
              "en": "-sh : summary size of directory"
            },
            {
              "ru": "-h : человекочитаемый формат",
              "en": "-h : human-readable format"
            },
            {
              "ru": "--max-depth=1 : только первый уровень вложенности",
              "en": "--max-depth=1 : first level only"
            }
          ],
          "examples": ["du -sh /var/log", "du -h --max-depth=1 /var"],
          "use_case": {
            "ru": "Найти какая папка занимает больше всего места",
            "en": "Find which folder takes most space"
          }
        },
        "uptime": {
          "name": "uptime",
          "description": {
            "ru": "Показывает сколько времени работает сервер и нагрузку",
            "en": "Shows server uptime and load average"
          },
          "params": [],
          "examples": ["uptime"],
          "use_case": {
            "ru": "Проверить не было ли перезагрузки, посмотреть load average",
            "en": "Check if there was a reboot, view load average"
          }
        },
        "netstat": {
          "name": "netstat",
          "description": {
            "ru": "Показывает сетевые соединения и порты",
            "en": "Network statistics - shows network connections and ports"
          },
          "params": [
            {
              "ru": "-tuln : TCP/UDP listening порты с номерами",
              "en": "-tuln : TCP/UDP listening ports with numbers"
            },
            {
              "ru": "-an : все соединения",
              "en": "-an : all connections"
            }
          ],
          "examples": ["netstat -tuln", "netstat -an | grep 80"],
          "use_case": {
            "ru": "Проверить какие порты открыты, есть ли соединения",
            "en": "Check which ports are open, if connections exist"
          }
        }
      }
    },
    "processes": {
      "name": {
        "ru": "Управление процессами",
        "en": "Process Management"
      },
      "description": {
        "ru": "Остановка и контроль запущенных программ",
        "en": "Stopping and controlling running programs"
      },
      "commands": {
        "kill": {
          "name": "kill",
          "description": {
            "ru": "Отправляет сигнал процессу (обычно для остановки)",
            "en": "Send signal to process (usually to stop it)"
          },
          "params": [
            {
              "ru": "-9 : принудительное завершение (SIGKILL)",
              "en": "-9 : force kill (SIGKILL)"
            },
            {
              "ru": "-15 : мягкое завершение (SIGTERM, по умолчанию)",
              "en": "-15 : graceful termination (SIGTERM, default)"
            }
          ],
          "examples": ["kill 1234", "kill -9 5678"],
          "use_case": {
            "ru": "Остановить зависший или проблемный процесс",
            "en": "Stop hung or problematic process"
          }
        },
        "killall": {
          "name": "killall",
          "description": {
            "ru": "Останавливает все процессы с указанным именем",
            "en": "Kill all processes with specified name"
          },
          "params": [
            {
              "ru": "-9 : принудительно",
              "en": "-9 : force kill"
            }
          ],
          "examples": ["killall nginx", "killall -9 python"],
          "use_case": {
            "ru": "Остановить все экземпляры программы сразу",
            "en": "Stop all instances of program at once"
          }
        },
        "pkill": {
          "name": "pkill",
          "description": {
            "ru": "Останавливает процессы по шаблону имени",
            "en": "Kill processes by name pattern"
          },
          "params": [
            {
              "ru": "-f : искать в полном имени команды",
              "en": "-f : search in full command name"
            }
          ],
          "examples": ["pkill python", "pkill -f 'manage.py'"],
          "use_case": {
            "ru": "Гибкая остановка процессов по части имени",
            "en": "Flexible process stopping by partial name"
          }
        }
      }
    },
    "network": {
      "name": {
        "ru": "Сеть и соединения",
        "en": "Network & Connections"
      },
      "description": {
        "ru": "Диагностика и работа с сетью",
        "en": "Network diagnostics and operations"
      },
      "commands": {
        "ping": {
          "name": "ping",
          "description": {
            "ru": "Проверяет доступность хоста в сети",
            "en": "Check host availability in network"
          },
          "params": [
            {
              "ru": "-c 5 : отправить 5 пакетов и остановиться",
              "en": "-c 5 : send 5 packets and stop"
            }
          ],
          "examples": ["ping google.com", "ping -c 5 8.8.8.8"],
          "use_case": {
            "ru": "Проверить есть ли интернет, доступен ли сервер",
            "en": "Check if internet works, if server is reachable"
          }
        },
        "curl": {
          "name": "curl",
          "description": {
            "ru": "Отправляет HTTP запросы, скачивает файлы",
            "en": "Send HTTP requests, download files"
          },
          "params": [
            {
              "ru": "-I : показать только заголовки",
              "en": "-I : show headers only"
            },
            {
              "ru": "-o file : сохранить в файл",
              "en": "-o file : save to file"
            },
            {
              "ru": "-X POST : указать метод запроса",
              "en": "-X POST : specify request method"
            }
          ],
          "examples": ["curl http://example.com", "curl -I https://api.server.com/health"],
          "use_case": {
            "ru": "Проверить работает ли веб-сервер, API, скачать файл",
            "en": "Check if web server, API works, download file"
          }
        },
        "wget": {
          "name": "wget",
          "description": {
            "ru": "Скачивает файлы из интернета",
            "en": "Download files from internet"
          },
          "params": [
            {
              "ru": "-O file : сохранить под другим именем",
              "en": "-O file : save with different name"
            },
            {
              "ru": "-c : продолжить прерванную загрузку",
              "en": "-c : continue interrupted download"
            }
          ],
          "examples": ["wget https://example.com/file.zip"],
          "use_case": {
            "ru": "Скачать файлы, архивы, релизы на сервер",
            "en": "Download files, archives, releases to server"
          }
        },
        "dig": {
          "name": "dig",
          "description": {
            "ru": "DNS запросы и диагностика",
            "en": "DNS queries and diagnostics"
          },
          "params": [
            {
              "ru": "+short : краткий вывод",
              "en": "+short : brief output"
            }
          ],
          "examples": ["dig example.com", "dig +short google.com"],
          "use_case": {
            "ru": "Проверить DNS записи, узнать IP домена",
            "en": "Check DNS records, get domain IP"
          }
        }
      }
    },
    "logs": {
      "name": {
        "ru": "Логи и поиск",
        "en": "Logs & Search"
